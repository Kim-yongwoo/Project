<mapper namespace="yw.basket.mapper.IBoardMapper">


	<!--<select> 태그를 이용하여 select 쿼리임을 나타냄. 앞서 mapper에서 말했던 메소드의 이름은 select 쿼리의 id값과 같아야함.-->
	<select id="selectBoardList" resultType="BoardDTO">
		SELECT
			  BOARD_SEQ AS 'boardSeq'
			 ,BOARD_TITLE AS 'boardTitle'
			 ,BOARD_REG_DATE AS 'boardRegDate'
			 ,BOARD_REG_SEQ AS 'boardRegSeq'
		FROM TB_BOARD ORDER BY BOARD_SEQ ASC

	</select>

	<insert id="insertBoard" parameterType="BoardDTO">

		INSERT
		INTO
			TB_BOARD
		(
			BOARD_TITLE
		,   BOARD_CONTENTS
		,   BOARD_REG_SEQ
		,   BOARD_REG_DATE
		)
		VALUES
	    (
			    #{boardTitle}
			  , #{boardContents}
			  , #{boardRegSeq}
			  , NOW()
	    )
	</insert>


